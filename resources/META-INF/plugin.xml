<idea-plugin version="2">
  <id>com.lightbend.sbtserversupport.sbtserversupport</id>
  <name>Support for sbt server</name>
  <version>1.0</version>
  <vendor email="support@lightbend.com" url="http://www.lightbend.com">Lightbend, Inc.</vendor>

  <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="141.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <actions>
    <!-- Add your actions here -->
    <action id="BuildOnSbtServer" class="com.lightbend.sbtserversupport.BuildOnSbtServerAction" text="Build on sbt server" description="Build on sbt server">
      <add-to-group group-id="BuildMenu" anchor="last"/>
    </action>
    <action id="CleanOnSbtServer" class="com.lightbend.sbtserversupport.CleanOnSbtServerAction"
            text="Clean on sbt server" description="Clean on sbt server"/>
  </actions>

  <project-components>
    <component>
      <implementation-class>com.lightbend.sbtserversupport.SbtServerConsole</implementation-class>
    </component>
  </project-components>
</idea-plugin>
